@model WebProject.Models.Anime

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="~/css/index.css">
<div class="maindiv">
    <div class="maindiv"><h1>Delete</h1></div>
    <br></br>
    <h3>Are you sure you want to delete this?</h3>

    <div>
        <dl class="row text-white">
            <dt class="col-sm-2">
                Anime Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AnimeName)
            </dd>
            <dt class="col-sm-2">
                Category:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AnimeCategory)
            </dd>
            <dt class="col-sm-2">
                Release Date:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AnimeReleaseDate)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="text-decoration-none text-white" asp-action="Index">Back to List</a>
        </form>
    </div>

</div>